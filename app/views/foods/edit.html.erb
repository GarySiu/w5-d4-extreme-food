<form action="/foods/<%= @food.id %>" method="post">
  <input name="_method" type="hidden" value="put" />
  <div><label for="name">name:</label><input type="text" name="name" id="name" value="<%= @food.name %>"></div>
  <div><label for="image_url">image url:</label><input type="text" name="image_url" id="image_url" value="<%= @food.image_url %>"></div>
  <div><textarea name="text" id="text" cols="30" rows="10" placeholder="text goes here"><%= @food.text %>"</textarea></div>
  <div><input type="submit" value="submit"></div>
</form>